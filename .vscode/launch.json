{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",  // Your main app file
            "env": {
                "FLASK_APP": "${workspaceFolder}/run.py",
                "FLASK_ENV": "development"  // Optional: set to "production" for production mode
            },
            "args": [
                "run", "--no-debugger", "--no-reload"
            ],
            "jinja": true,
        }
    ]
}
